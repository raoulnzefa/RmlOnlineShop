@{
    ViewData["Title"] = "Checkout";
}

@model ProductsAndOrderInfoViewModel

<form asp-action="ClientCheckout">
    <div class="col-md-7">
        <!-- Billing Details -->

        <div class="billing-details">
            <div class="section-title">
                <h3 class="title">Shiping address</h3>
            </div>
            <div class="form-group">
                <label asp-for="ClientOrderInformatiomViewModel.FirstNameCustomer"></label>
                <input class="input" asp-for="ClientOrderInformatiomViewModel.FirstNameCustomer">
                <span asp-validation-for="ClientOrderInformatiomViewModel.FirstNameCustomer"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientOrderInformatiomViewModel.LastNameCustomer"></label>
                <input class="input" asp-for="ClientOrderInformatiomViewModel.LastNameCustomer">
                <span asp-validation-for="ClientOrderInformatiomViewModel.LastNameCustomer"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientOrderInformatiomViewModel.EmailCustomer"></label>
                <input class="input" asp-for="ClientOrderInformatiomViewModel.EmailCustomer">
                <span asp-validation-for="ClientOrderInformatiomViewModel.EmailCustomer"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientOrderInformatiomViewModel.AddressPrimary"></label>
                <input class="input" asp-for="ClientOrderInformatiomViewModel.AddressPrimary">
                <span asp-validation-for="ClientOrderInformatiomViewModel.AddressPrimary"></span>

            </div>
            <div class="form-group">
                <label asp-for="ClientOrderInformatiomViewModel.AddressSecondary"></label>
                <input class="input" asp-for="ClientOrderInformatiomViewModel.AddressSecondary">
                <span asp-validation-for="ClientOrderInformatiomViewModel.AddressSecondary"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientOrderInformatiomViewModel.City"></label>
                <input class="input" asp-for="ClientOrderInformatiomViewModel.City">
                <span asp-validation-for="ClientOrderInformatiomViewModel.City"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientOrderInformatiomViewModel.Country"></label>
                <input class="input" asp-for="ClientOrderInformatiomViewModel.Country">
                <span asp-validation-for="ClientOrderInformatiomViewModel.Country"></span>

            </div>
            <div class="form-group">
                <label asp-for="ClientOrderInformatiomViewModel.PostCode"></label>
                <input class="input" asp-for="ClientOrderInformatiomViewModel.PostCode">
                <span asp-validation-for="ClientOrderInformatiomViewModel.PostCode"></span>
            </div>

        </div>
        <!-- /Billing Details -->
        <!-- Order notes -->
        <div class="order-notes">
            <label asp-for="ClientOrderInformatiomViewModel.OrderBuyerComment"></label>
            <textarea class="input" asp-for="ClientOrderInformatiomViewModel.OrderBuyerComment"></textarea>
            <span asp-validation-for="ClientOrderInformatiomViewModel.OrderBuyerComment"></span>
        </div>
        <!-- /Order notes -->
    </div>

    <!-- Order Details -->
    <div class="col-md-5 order-details">
        <div class="section-title text-center">
            <h3 class="title">Your Order</h3>
        </div>
        <div class="order-summary">
            <div class="order-col">
                <div><strong>PRODUCT</strong></div>
                <div><strong>TOTAL</strong></div>
            </div>
            <div class="order-products">
                @foreach (var product in Model.ProductsInCartViewModel)
                {
                    <div class="order-col">
                        <div>@(product.Quantity)x @(product.ProductName)</div>
                        <div>RUB @(product.Quantity * product.ProductPrice)</div>
                    </div>
                }

            </div>
            <div class="order-col">
                <div>Shiping</div>
                <div><strong>FREE</strong></div>
            </div>
            <div class="order-col">
                <div><strong>TOTAL</strong></div>
                <div><strong class="order-total">RUB @Model.ProductsInCartViewModel.Sum(x=>x.ProductPrice * x.Quantity)</strong></div>
            </div>
        </div>
        
        <div class="input-checkbox">
            <input type="checkbox" id="terms">
            <label for="terms">
                <span></span>
                I've checked and agreed with <a asp-action="Conditions" style="text-decoration:underline">conditions of the store</a>
            </label>
        </div>
        <button type="submit" class="primary-btn order-submit">Place order</button>
    </div>
    <!-- /Order Details -->
</form>