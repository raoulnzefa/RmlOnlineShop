@{ 
    ViewData["Title"] = "My Cart";
}

@model IEnumerable<ProductsInCartViewModel>


<div class="container">
    <h1>My Product Cart</h1>
    <hr />
    @if (Model == null)
    {
        <h2>Your cart is empty! Let's buy <a asp-action="Index"><i>something</i></a> right now</h2>
    }
    else
    {
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Option</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice.ToString("F0")</td>
                    <td>@product.StockDescription</td>
                    <td>@product.Quantity</td>
                </tr>
                }
            </tbody>
        </table>

        <hr />
        <a asp-action="ClientCheckout" asp-controller="Products" class="add-to-cart-btn align-content-end">Checkout</a>
    }
</div>



