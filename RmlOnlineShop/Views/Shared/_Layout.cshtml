<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RmlOnlineShop</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <!--CUSTOM CSS SETUP-->
    <environment include="Development">
        <link href="~/lib/bulma/css/bulma.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link href="~/lib/bulma/css/bulma.min.css" rel="stylesheet" asp-append-version="true"/>
    </environment>
    <!--CUSTOM CSS SETUP ENDS-->
</head>
<body>
    <a class="nav-link text-dark" asp-area="" asp-controller="AdminDashboard" asp-action="Index">Admin</a>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - RmlOnlineShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
