
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div id="app" class="container">
    <div class="columns">

    </div>

    <div>
        <input v-model="productModel.name" />
        <input v-model="productModel.description" />
        <input v-model.number="productModel.price" />
        <br />
        <div class="btn-group mt-2 mb-2">
            <button class="btn btn-outline-info" @@click="createProduct">Create Product</button>
            <button class="btn btn-outline-info" @@click="updateProduct" v-if="EditMode">Update Product</button>
        </div>
    </div>
    <div class="container">
        <table class="table" v-if="getProductsButtonPressed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(product, index) in products">
                    <td>
                        {{product.name}}
                    </td>
                    <td>
                        {{product.description}}
                    </td>
                    <td>
                        {{product.price}}
                    </td>
                    <td>
                        <button @@click="editProduct(product, index)" class="btn btn-info">Edit</button>
                    </td>
                    <td>
                        <button @@click="deleteProduct(product.id, index)" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="~/js/Admin/main.js"></script>
}

